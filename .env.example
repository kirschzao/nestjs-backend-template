NODE_ENV="development"

# ==============================
# PostgreSQL Database Configuration
# ==============================
DATABASE_URL="postgresql://admin:admin@localhost:5432/oryzalabs-db"
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin


# ==============================
# AWS S3 Bucket Configuration
# ==============================
BUCKET_ACCESS_KEY_ID="SUA_ACCESS_KEY_ID"
BUCKET_SECRET_ACCESS_KEY="SUA_SECRET_ACCESS_KEY"
BUCKET_REGION="sua-regiao-aws"
BUCKET_NAME="nome-do-seu-bucket"
BUCKET_ENDPOINT="endpoint-do-seu-bucket-se-necessario" # Para o minio ou outros serviços compatíveis com S3

# ==============================
# AWS SES Send Email Configuration
# ==============================
SES_ACCESS_KEY_ID=""
SES_SECRET_ACCESS_KEY=""
SES_REGION=""
SES_SENDER_EMAIL=""
SES_SENDER_NAME=""

# ==============================
# Access Token Configuration
# ==============================
ACCESS_TOKEN_SECRET="qualquer_coisa_aleatoria_para_refreshtoken"
